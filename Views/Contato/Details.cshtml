@model AgendaContatos.Models.Contato

@{
    ViewData["Title"] = "Detalhes do Contato";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Detalhes do Contato</h4>
            <a class="btn btn-dark" asp-action="Index">Voltar</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Apelido</dt>
                <dd class="col-sm-9">@Model.Apelido</dd>

                <dt class="col-sm-3">CPF</dt>
                <dd class="col-sm-9">@Model.CPF</dd>

                <dt class="col-sm-3">Telefone</dt>
                <dd class="col-sm-9">@Model.Telefone</dd>

                <dt class="col-sm-3">E-mail</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Data de Cadastro</dt>
                <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Última Alteração</dt>
                <dd class="col-sm-9">@Model.DataUltimaAlteracao?.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>
</div>
